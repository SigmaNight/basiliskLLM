{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "separateMinorPatch": true,
  "separateMajorMinor": true,
  "separateMultipleMajor": false,

  "schedule": [
    "every weekend"
  ],
  "lockFileMaintenance": {
    "enabled": true,
    "schedule": ["every weekend"]
  },
  "enabledManagers": ["pep621", "github-actions"],
  "pep621": {
    "rangeStrategy": "bump"
  }
}
